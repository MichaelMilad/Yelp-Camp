<% layout('layouts/boilerplate')%>
<div id="map" style="width:100%;height:500px"></div>
<h1>All Campgrounds</h1>
<div><a href="/campgrounds/new">Add a new Camp</a></div>

<% for(let camp of allCamps) { %>
<div class="card mb-3">
   <div class="row">
      <div class="col-md-4">
         <img src="<%=camp.images.length ? camp.images[0].url : "https://res.cloudinary.com/dgxj5cmcr/image/upload/v1649858368/YelpCamp/download_tl0acj.png"%>" alt="" class="img-fluid" />
      </div>
      <div class="col-md-8">
         <div class="card-body">
            <h5 class="card-title"><%= camp.title %></h5>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text">
               <small class="text-muted"><%= camp.location %> </small>
            </p>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"
               >View <%= camp.title %>
            </a>
         </div>
      </div>
   </div>
</div>
<% } %>

<script>
   const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
   const campgrounds = {features: <%-JSON.stringify(allCamps) %> };
</script>

<script src="/javascripts/clusterMap.js"></script>
